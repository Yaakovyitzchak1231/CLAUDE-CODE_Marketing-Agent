# ==================== DATABASE CONFIGURATION ====================
POSTGRES_USER=marketing_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=marketing_db

# ==================== REDIS CONFIGURATION ====================
REDIS_PASSWORD=change_this_redis_password

# ==================== N8N CONFIGURATION ====================
# Local Docker n8n (default)
N8N_USER=admin
N8N_PASSWORD=change_this_n8n_password
N8N_HOST=localhost
N8N_API_KEY=your_n8n_api_key_here
TIMEZONE=America/New_York

# External n8n (Cloud Run, Railway, etc.)
# Uncomment and configure if using external n8n instead of Docker
# N8N_EXTERNAL_URL=https://n8n-de5xsqtqma-wl.a.run.app
# N8N_WEBHOOK_URL=https://n8n-de5xsqtqma-wl.a.run.app/webhook

# ==================== IMAGE GENERATION APIs ====================
# OpenAI DALL-E 3 (Required for image generation)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Midjourney API (Optional alternative to DALL-E 3)
# Note: This requires unofficial Midjourney API access
MIDJOURNEY_API_KEY=your_midjourney_api_key_here

# ==================== VIDEO GENERATION APIs ====================
# Runway ML (Required for video generation)
# Get your API key from: https://runwayml.com/
RUNWAY_API_KEY=your_runway_ml_api_key_here

# Pika API (Optional alternative to Runway ML)
# Get your API key from: https://pika.art/
PIKA_API_KEY=your_pika_api_key_here

# ==================== PUBLISHING APIs ====================
# LinkedIn Publishing
# Get your access token from: https://www.linkedin.com/developers/
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# WordPress Publishing
WORDPRESS_URL=https://your-wordpress-site.com
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_PASSWORD=your_wordpress_app_password

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_smtp_app_password

# ==================== ANALYTICS ====================
# Matomo Analytics
MATOMO_SITE_ID=1
MATOMO_AUTH_TOKEN=your_matomo_auth_token_here

# ==================== SEARCH ====================
# SearXNG Secret Key (generate with: openssl rand -hex 32)
SEARXNG_SECRET=your_random_secret_key_here

# ==================== CHROMA VECTOR DB ====================
# Authentication for Chroma (optional but recommended)
CHROMA_AUTH=admin:change_this_chroma_password

# ==================== DEPLOYMENT ====================
# Set to 'production' for production deployment
NODE_ENV=development

# ==================== OPTIONAL: GOOGLE CLOUD (for backups/storage) ====================
# Uncomment if you want to use Google Cloud Storage for media backups
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# GCS_BUCKET_NAME=your-bucket-name

# ==================== OPTIONAL: AWS S3 (for backups/storage) ====================
# Uncomment if you want to use AWS S3 for media backups
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name

# ==================== COST TRACKING ====================
# Monthly budget limits (optional, for tracking)
MONTHLY_IMAGE_BUDGET=100
MONTHLY_VIDEO_BUDGET=76
MONTHLY_TOTAL_API_BUDGET=300

# ==================== NOTES ====================
# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env to git (it's in .gitignore)
# 3. Generate secure passwords using: openssl rand -base64 32
# 4. For production, use strong unique passwords for all services
# 5. API keys can be obtained from their respective service dashboards
